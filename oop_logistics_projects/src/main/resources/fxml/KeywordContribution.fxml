<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.oop.logistics.ui.controllers.KeywordContributionController"
      alignment="TOP_CENTER" spacing="20" styleClass="card-pane" maxWidth="600">

    <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>

    <Label text="Contribute Knowledge" styleClass="header-label"/>
    <Label text="Select a configuration file to add new keywords to the system." styleClass="sub-header"/>
    
    <Separator/>

    <GridPane vgap="15" hgap="10" alignment="CENTER">
        <Label text="1. Target File:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="fileSelector" promptText="Select Configuration File" 
                  prefWidth="350" GridPane.rowIndex="0" GridPane.columnIndex="1" onAction="#loadSelectedFile"/>

        <Label text="2. Category:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="categorySelector" promptText="Select Existing or Type New" 
                  prefWidth="350" GridPane.rowIndex="1" GridPane.columnIndex="1" editable="true"/>

        <Label text="3. Keyword:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtKeyword" promptText="Enter new keyword (e.g., 'ngập lụt')" 
                   prefWidth="350" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Save Keyword" onAction="#handleSave" styleClass="button, button-success"/>
        <Button text="← Back to Menu" onAction="#handleBack" styleClass="button, button-secondary"/>
    </HBox>

    <Label fx:id="statusLabel" text="" style="-fx-font-weight: bold;"/>

</VBox>